@model List<CleanShirt.WareHouseSystem.ViewModels.OrderViewModel>



@if (Model != null)
{
    foreach (var item in Model)
    {
        <tr id="row-@item.Id">
            <td>@item.Id</td>
            <td>@item.Customer.FirstName @item.Customer.LastName</td>
            <td>@item.TotalPrice SEK</td>
            <td>@item.OrderedDate.Date.ToShortDateString()</td>
            <td class="text-center">
                @if (item.Sent == true)
                {
                    <span style="color: green" class="glyphicon glyphicon-ok"></span>
                }
                else
                {
                    <span style="color: red" class="glyphicon glyphicon-remove"></span>
                }
            </td>

            <td>
                @if (item.Sent == false)
                {
                    <button class="btn btn-info btn-sm" onclick="openCheckList(@Json.Encode(item))">
                        <span class="glyphicon glyphicon-edit"></span>
                    </button>
                }
                else
                {
                    <button class="btn btn-danger btn-sm" onclick="undoSent(@Json.Encode(item))">
                        <span class="glyphicon glyphicon-remove"></span>
                    </button>
                }
            </td>
        </tr>
    }
}
